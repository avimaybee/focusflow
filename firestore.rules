
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document.
    // This also implicitly checks if the user is authenticated.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Secure all user-specific data.
    // A user can read or write any document within their own user directory.
    // This includes their profile and all subcollections like summaries, goals, etc.
    match /users/{userId}/{documents=**} {
      allow read, write: if isOwner(userId);
    }

    // Public summaries collection: Allow anyone to read, but disallow client writes for security.
    match /publicSummaries/{slug} {
      allow read: if true;
      allow write: if false;
    }
  }
}
