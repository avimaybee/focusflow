
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own profile data.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Users can only manage their own content subcollections.
      match /summaries/{summaryId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /flashcardSets/{setId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /quizzes/{quizId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /studyPlans/{planId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /studySessions/{sessionId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /goals/{goalId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Public summaries are readable by anyone, but not writable from the client.
    // Writes should be handled by a trusted server environment (e.g. server action).
    match /publicSummaries/{summarySlug} {
      allow read: if true;
      allow write: if false;
    }
  }
}
