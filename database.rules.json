
{
  "rules": {
    "databases": {
      "(default)": {
        "documents": {
          "users/{userId}": {
            ".read": "request.auth.uid == userId",
            "chats/{chatId}": {
              ".read": "request.auth.uid == userId",
              ".write": "request.auth.uid == userId"
            },
            "summaries/{summaryId}": {
              ".read": "request.auth.uid == userId",
              ".write": "request.auth.uid == userId"
            },
            "quizzes/{quizId}": {
              ".read": "request.auth.uid == userId",
              ".write": "request.auth.uid == userId"
            },
            "flashcardSets/{setId}": {
              ".read": "request.auth.uid == userId",
              ".write": "request.auth.uid == userId"
            },
            "studyPlans/{planId}": {
              ".read": "request.auth.uid == userId",
              ".write": "request.auth.uid == userId"
            },
            "studySessions/{studySessionId}": {
              ".read": "request.auth.uid == userId",
              ".write": "request.auth.uid == userId"
            },
            "goals/{goalId}": {
              ".read": "request.auth.uid == userId",
              ".write": "request.auth.uid == userId"
            },
            ".write": "request.auth.uid == userId && request.resource.data.keys().hasOnly(['uid', 'email', 'displayName', 'photoURL', 'createdAt', 'lastLogin', 'isPremium', 'preferredPersona', 'favoritePrompts'])"
          },
          "publicSummaries/{slug}": {
            ".read": true,
            ".write": false
          },
          "promptTemplates/{templateId}": {
            ".read": true,
            ".write": false
          },
          "personas/{personaId}": {
            ".read": true,
            ".write": false
          }
        }
      }
    }
  }
}
